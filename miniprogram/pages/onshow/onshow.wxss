.pic{
  height: 200rpx;
  display: flex;
  justify-content: left;
  align-items: center;
}
.pic image{
  width: 200rpx;
}

.title{
  height: 60rpx;
  display: flex;
  align-items: center;
  font-size: medium;
  color: #000000;
  font-weight: bold;
}
.author{
    height: 40rpx;
  display: flex;
  align-items: center;
  font-size: small;
  color: #747272;
}

.date{
  height: 60rpx;
  width: 100%;
  display: flex;
  align-items: flex-end;
  font-size: small;
}
.price{
  flex-grow: 5;
  color: #ff0800;
  font-size: large;
}

.crash{
  flex-grow:3;
  width: 100rpx;
  height: 45rpx;
  color: #747272;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  justify-items: center;
    font-size: smaller;
}
.red{
  background-color: rgb(255, 8, 0);
  color: #ffffff;
}
.yellow{
  background-color: rgb(251, 189, 8);
  color: #ffffff;
}


.card{
  margin:20rpx;
  padding:20rpx;
 box-shadow: 0px 0px 3px #d3d3d3;
 border-radius: 10rpx;
}

